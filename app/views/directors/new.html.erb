<h1>New director</h1>

<% @director.errors.full_messages.each do |message| %>
  <p style="color: red;"><%= message %></p>
<% end %>

<hr>

<%= form_with(model: @director, data: { turbo: false }) do |form| %>
  <div>
    <%= form.label :name %>

    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :dob %>

    <%= form.text_area :dob, row: 3 %>
  </div>

  <div>
    <%= form.label :bio %>

    <%= form.text_area :bio, row: 3 %>
  </div>

  <%= form.button %>
<% end %>
